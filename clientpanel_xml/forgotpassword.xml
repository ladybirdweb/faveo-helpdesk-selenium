<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="FORGOTPASSWORD">
    <listeners>
        <listener class-name="commontests.Listeners"/>
    </listeners>

    <test name="ValidEmailForForgotPassword">

        <classes>
            <class name="clientpaneltests.ForgotPasswordTest">
                <methods>
                    <parameter name="emailforforgotpassword" value="kvb422@gmail.com"/>
                    <include name="validForgotPassword"/>
                </methods>
            </class>
        </classes>
    </test>



    <test name="InvalidEmailForForgotPassword">

        <classes>
            <class name="clientpaneltests.ForgotPasswordTest">
                <methods>
                    <parameter name="emailforforgotpassword" value="kvb422"/>
                    <include name="invalidForgotPassword"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="IKnowMyPassword">

        <classes>
            <class name="clientpaneltests.ForgotPasswordTest">
                <methods>
                    <include name="iKnowMyPassword"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>