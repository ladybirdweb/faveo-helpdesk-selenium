<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="PROFILETESTSOFCLIENTPANEL">
    <listeners>
        <listener class-name="commontests.Listeners"/>
    </listeners>

    <test name="passwordChangeInvalidOldPassword">

        <classes>
            <class name="clientpaneltests.ChangePasswordOfClientTest">
                <methods>
                    <parameter name="userName" value="vk"/>
                    <parameter name="password" value="test123!"/>
                    <parameter name="oldPasswordOfClientPanel" value="test123"/>
                    <parameter name="newPasswordOfClientPanel" value="123456"/>
                    <parameter name="confirmPasswordOfClientPanel" value="123456"/>
                    <include name="passwordChangeInvalidOldPassword"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="passwordChangeMismatchNewAndConfirmPassword">

        <classes>
            <class name="clientpaneltests.ChangePasswordOfClientTest">
                <methods>
                    <parameter name="userName" value="vk"/>
                    <parameter name="password" value="test123!"/>
                    <parameter name="oldPasswordOfClientPanel" value="test123!"/>
                    <parameter name="newPasswordOfClientPanel" value="123456"/>
                    <parameter name="confirmPasswordOfClientPanel" value="123456321"/>
                    <include name="passwordChangeMismatchNewAndConfirmPassword"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="passwordChangeValid">

        <classes>
            <class name="clientpaneltests.ChangePasswordOfClientTest">
                <methods>
                    <parameter name="userName" value="vk"/>
                    <parameter name="password" value="test123!"/>
                    <parameter name="oldPasswordOfClientPanel" value="test123!"/>
                    <parameter name="newPasswordOfClientPanel" value="123456"/>
                    <parameter name="confirmPasswordOfClientPanel" value="123456"/>
                    <include name="passwordChangeValid"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="passwordResettingToActual">

        <classes>
            <class name="clientpaneltests.ChangePasswordOfClientTest">
                <methods>
                    <parameter name="userName" value="vk"/>
                    <parameter name="password" value="test123!"/>
                    <parameter name="oldPasswordOfClientPanel" value="123456"/>
                    <parameter name="newPasswordOfClientPanel" value="test123!"/>
                    <parameter name="confirmPasswordOfClientPanel" value="test123!"/>
                    <include name="passwordChangeValid"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>